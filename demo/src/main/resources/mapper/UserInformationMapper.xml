<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cjk.bakend.demo.mapper.UserInformationMapper">
  <resultMap id="UserInformationMap" type="com.cjk.bakend.demo.pojo.UserInformation">
        <result column="user_name" jdbcType="VARCHAR" property="userName" />
  </resultMap>


  <sql id="Base_Column_List">
    user_name
  </sql>

  <select id="selectUserInformationByUserId" parameterType="INTEGER" resultMap="UserInformationMap">
    select user_name from user_Information where user_id = #{user_id}
  </select>

  <insert id="insertByPrimaryKey" resultMap="UserInformationMap" parameterType="Long">
    insert into user_Information (user_name,user_id) values ('用户'+#{user_id},#{user_id})
  </insert>
</mapper>